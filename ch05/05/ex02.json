{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Create a RDS Instance of MySQL Engine",
  "Resources": {



    "InternetGateway": {
      "Type": "AWS::EC2::InternetGateway",
      "Properties": {}
    },
    "MyVPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "10.0.0.0/16",
        "EnableDnsHostnames": "true"
      }
    },
    "VPCGatewayAttachment": {
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "VpcId": {"Ref": "MyVPC"},
        "InternetGatewayId": {"Ref": "InternetGateway"}
      }
    },
    "SecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "My VPC Security Group",
        "GroupName": "MyVPCSecurityGroup",
        "VpcId": {
          "Ref": "MyVPC"
        },
        "SecurityGroupIngress": [{
          "IpProtocol": "-1",
          "FromPort": "-1",
          "ToPort": "-1",
          "CidrIp": "0.0.0.0/0"
        }],
        "SecurityGroupEgress": [{
          "IpProtocol": "-1",
          "FromPort": "-1",
          "ToPort": "-1",
          "CidrIp": "0.0.0.0/0"
        }]
      }
    },


    "Subnet02": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {"Ref": "MyVPC"},
        "AvailabilityZone": {
          "Fn::Select": ["0", {"Fn::GetAZs": ""}]
        },
        "CidrBlock": "10.0.2.0/24"
      }
    },

    "RouteTable02": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {"Ref": "MyVPC"}
      }
    },
    "Subnet02RouteTable02Association": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": {"Ref": "Subnet02"},
        "RouteTableId": {"Ref": "RouteTable02"}
      }
    },

    "NetworkAcl02": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
        "VpcId": {"Ref": "MyVPC"}
      }
    },
    "NetworkAcl02Entry01": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {"Ref": "NetworkAcl02"},
        "RuleNumber": "100",
        "Protocol": "6",
        "PortRange": {
          "From": "3306",
          "To": "3306"
        },
        "RuleAction": "allow",
        "Egress": "false",
        "CidrBlock": "10.0.1.0/24"
      }
    },
    "NetworkAcl02Entry02": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {"Ref": "NetworkAcl02"},
        "RuleNumber": "200",
        "Protocol": "6",
        "PortRange": {
          "From": "1024",
          "To": "65535"
        },
        "RuleAction": "allow",
        "Egress": "true",
        "CidrBlock": "10.0.1.0/24"
      }
    },
    "Subnet02NetworkAcl02Association": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {"Ref": "Subnet02"},
        "NetworkAclId": {"Ref": "NetworkAcl02"}
      }
    },


    "Subnet03": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {"Ref": "MyVPC"},
        "AvailabilityZone": {
          "Fn::Select": ["1", {"Fn::GetAZs": ""}]
        },
        "CidrBlock": "10.0.3.0/24"
      }
    },

    "RouteTable03": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {"Ref": "MyVPC"}
      }
    },
    "Subnet03RouteTable03Association": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": {"Ref": "Subnet03"},
        "RouteTableId": {"Ref": "RouteTable03"}
      }
    },

    "NetworkAcl03": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
        "VpcId": {"Ref": "MyVPC"}
      }
    },
    "NetworkAcl03Entry01": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {"Ref": "NetworkAcl03"},
        "RuleNumber": "100",
        "Protocol": "6",
        "PortRange": {
          "From": "3306",
          "To": "3306"
        },
        "RuleAction": "allow",
        "Egress": "false",
        "CidrBlock": "10.0.1.0/24"
      }
    },
    "NetworkAcl03Entry02": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {"Ref": "NetworkAcl03"},
        "RuleNumber": "200",
        "Protocol": "6",
        "PortRange": {
          "From": "1024",
          "To": "65535"
        },
        "RuleAction": "allow",
        "Egress": "true",
        "CidrBlock": "10.0.1.0/24"
      }
    },
    "Subnet03NetworkAcl03Association": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {"Ref": "Subnet03"},
        "NetworkAclId": {"Ref": "NetworkAcl03"}
      }
    },

    "DBSubnetGroup": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Properties": {
        "DBSubnetGroupDescription": "Subnets available for the RDS DB Instance",
        "SubnetIds": [{"Ref": "Subnet02"}, {"Ref": "Subnet02"}]
      }
    },

    "Database": {
      "Type": "AWS::RDS::DBInstance",
      "DeletionPolicy": "Delete",
      "Properties": {
        "AllocatedStorage": "5",
        "DBInstanceClass": "db.t2.micro",
        "DBInstanceIdentifier": "myapp-db",
        "DBName": "myapp",
        "Engine": "MySQL",
        "MasterUsername": "myapp",
        "MasterUserPassword": "myapp12345",
        "DBSubnetGroupName" : {"Ref": "DBSubnetGroup"},
        "VPCSecurityGroups" : [{"Ref": "SecurityGroup"}]
      }
    }
  },

  "Outputs": {
    "Endpoint": {
      "Description": "the Endpoint of RDS instance created",
      "Value": {
        "Fn::GetAtt": ["Database", "Endpoint.Address"]
      }
    }
  }
}